<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/all_tasks_main_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/task_name_clicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackgroundBorderless">

        <TextView
            android:id="@+id/subject_all_tasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="TextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tasks_num"
            android:layout_alignBaseline="@+id/subject_all_tasks"
            android:layout_alignBottom="@+id/subject_all_tasks"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="33dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/all_tasks_rec_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>